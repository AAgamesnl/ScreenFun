{
  "name": "tapfrenzy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc -p . && tsc -p tsconfig.frontend.json",
    "build:server": "tsc -p .",
    "build:frontend": "tsc -p tsconfig.frontend.json",
    "start": "node dist/src/server.js",
    "typecheck": "tsc -p . --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "test": "echo \"No tests yet\" && exit 0",
    "prune": "ts-prune",
    "depcheck": "depcheck",
    "start-tapfrenzy": "powershell -ExecutionPolicy Bypass -File .\\start-tapfrenzy.ps1"
  },
  "dependencies": {
    "express": "^4.19.2",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.10",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "ts-node-dev": "^2.0.0",
    "ts-prune": "^0.10.3",
    "typescript": "^5.4.5",
    "undici-types": "^7.13.0",
    "vite": "^7.1.2",
    "vite-plugin-checker": "^0.10.2",
    "vite-plugin-pwa": "^1.0.2"
  }
}
