{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ensure-node",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\ensure-node.ps1",
        "-Version", "22.18.0"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "cleanup-port",
      "type": "shell",
      "command": "powershell",
      "args": [
  "-NoProfile",
  "-ExecutionPolicy", "Bypass",
  "-File",
  "${workspaceFolder}\\scripts\\cleanup-port.ps1",
  "-Port",
  "3000"
      ],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "build",
      "type": "shell",
  "command": "${workspaceFolder}\\node-v22.11.0-win-x64\\node.exe",
      "args": [
        ".\\node_modules\\typescript\\bin\\tsc"
      ],
      "group": "build",
      "problemMatcher": ["$tsc"],
  "dependsOn": ["ensure-node", "cleanup-port"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "build-frontend",
      "type": "shell",
  "command": "${workspaceFolder}\\node-v22.11.0-win-x64\\node.exe",
      "args": [
        ".\\node_modules\\typescript\\bin\\tsc",
        "-p",
        "tsconfig.frontend.json"
      ],
  "group": "build",
  "dependsOn": ["ensure-node"],
      "problemMatcher": ["$tsc"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "build-all",
      "dependsOn": ["build", "build-frontend"],
      "dependsOrder": "sequence",
      "group": "build"
    },
    {
      "label": "Start: Local server (PowerShell)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\start-tapfrenzy.ps1"
      ],
      "problemMatcher": []
    },
    {
      "label": "Git: Fetch+Checkout PR (by number)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "git fetch origin pull/${input:pr}/head:pr-${input:pr} && git checkout pr-${input:pr}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Git: Update main (pull --ff-only)",
      "type": "shell",
      "command": "git",
      "args": [
        "pull",
        "--ff-only"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "pr",
      "type": "promptString",
      "description": "PR-nummer (bv. 123)"
    }
  ]
}
