{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cleanup-port",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "netstat -ano | Select-String ':3000' | ForEach-Object { $line = $_.Line; $parts = $line -split '\\s+'; $processId = $parts[-1]; taskkill /F /PID $processId 2>$null }; Start-Sleep -Seconds 2"
      ],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "C:\\Users\\ayoub.elyaakoubi\\Documents\\node-v22.18.0-win-x64\\node.exe",
      "args": [
        ".\\node_modules\\typescript\\bin\\tsc"
      ],
      "group": "build",
      "problemMatcher": ["$tsc"],
      "dependsOn": "cleanup-port",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Start: Local server (PowerShell)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
  "${workspaceFolder}\\start-tapfrenzy.ps1"
      ],
      "problemMatcher": []
    },
    {
      "label": "Git: Fetch+Checkout PR (by number)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "git fetch origin pull/${input:pr}/head:pr-${input:pr} && git checkout pr-${input:pr}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Git: Update main (pull --ff-only)",
      "type": "shell",
      "command": "git",
      "args": [
        "pull",
        "--ff-only"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "pr",
      "type": "promptString",
      "description": "PR-nummer (bv. 123)"
    }
  ]
}
